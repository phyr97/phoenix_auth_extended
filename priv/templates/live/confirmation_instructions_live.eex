defmodule <%= @app_web_module %>.ConfirmationInstructionsLive do
  use <%= @app_web_module %>, :live_view

  alias <%= @app_module_name %>.<%= @context_name %>

  def render(assigns) do
    ~H"""
    <div class="mx-auto max-w-sm">
      <.header class="text-center">
        No confirmation instructions received?
        <:subtitle>We'll send a new confirmation link to your inbox</:subtitle>
      </.header>

      <.simple_form for={@form} id="resend_confirmation_form" phx-submit="send_instructions">
        <.input field={@form[:email]} type="email" placeholder="Email" required />
        <:actions>
          <.button phx-disable-with="Sending..." class="w-full">
            Resend confirmation instructions
          </.button>
        </:actions>
      </.simple_form>

      <p class="text-center mt-4">
        <.link href={~p"/<%= @entity_name_downcase %>s/register"}>Register</.link>
        | <.link href={~p"/<%= @entity_name_downcase %>s/log_in"}>Log in</.link>
      </p>
    </div>
    """
  end

  def mount(_params, _session, socket) do
    {:ok, assign(socket, form: to_form(%{}, as: "<%= @entity_name_downcase %>"))}
  end

  def handle_event("send_instructions", %{"<%= @entity_name_downcase %>" => %{"email" => email}}, socket) do
    if <%= @entity_name_downcase %> = <%= @context_name %>.get_<%= @entity_name_downcase %>_by_email(email) do
      <%= @context_name %>.deliver_<%= @entity_name_downcase %>_confirmation_instructions(
        <%= @entity_name_downcase %>,
        &url(~p"/<%= @entity_name_downcase %>s/confirm/#{&1}")
      )
    end

    info =
      "If your email is in our system and it has not been confirmed yet, " <>
        "you will receive an email with instructions shortly."

    {:noreply,
     socket
     |> put_flash(:info, info)
     |> redirect(to: ~p"/")}
  end
end
