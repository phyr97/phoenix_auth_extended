defmodule <%= inspect @context_module_name %>.<%= @entity_name %>Notifier do
  import Swoosh.Email

  alias <%= inspect @app_module_name %>.Mailer

  # Delivers the email using the application mailer.
  defp deliver(recipient, subject, body) do
    email =
      new()
      |> to(recipient)
      |> from({"<%= @app_module_name %>", "contact@example.com"})
      |> subject(subject)
      |> text_body(body)

    with {:ok, _metadata} <- Mailer.deliver(email) do
      {:ok, email}
    end
  end

  <%= if @options[:basic_identifier] == "email" do %>
  @doc """
  Deliver instructions to confirm account.
  """
  def deliver_confirmation_instructions(<%= String.downcase(@entity_name) %>, url) do
    deliver(<%= String.downcase(@entity_name) %>.email, "Confirmation instructions", """

    ==============================

    Hi #{<%= String.downcase(@entity_name) %>.email},

    You can confirm your account by visiting the URL below:

    #{url}

    If you didn't create an account with us, please ignore this.

    ==============================
    """)
  end

  @doc """
  Deliver instructions to reset a <%= String.downcase(@entity_name) %> password.
  """
  def deliver_reset_password_instructions(<%= String.downcase(@entity_name) %>, url) do
    deliver(<%= String.downcase(@entity_name) %>.email, "Reset password instructions", """

    ==============================

    Hi #{<%= String.downcase(@entity_name) %>.email},

    You can reset your password by visiting the URL below:

    #{url}

    If you didn't request this change, please ignore this.

    ==============================
    """)
  end

  @doc """
  Deliver instructions to update a <%= String.downcase(@entity_name) %> email.
  """
  def deliver_update_email_instructions(<%= String.downcase(@entity_name) %>, url) do
    deliver(<%= String.downcase(@entity_name) %>.email, "Update email instructions", """

    ==============================

    Hi #{<%= String.downcase(@entity_name) %>.email},

    You can change your email by visiting the URL below:

    #{url}

    If you didn't request this change, please ignore this.

    ==============================
    """)
  end
  <% end %>
end
